<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="animal" class="com.beantemplate.Animal" init-method="initA">
    	<property name="name" value="Hathi"/>
    	<property name="age" value="20"/>
    </bean>
    <bean id="elephant" class="com.beantemplate.Elephant" parent="animal" init-method="initE">
    	<property name="age" value="30"/>
    	<property name="location" value="Varanasi"/>
    </bean>
</beans>


